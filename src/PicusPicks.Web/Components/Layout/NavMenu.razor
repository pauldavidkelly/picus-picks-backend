@using MudBlazor

<MudNavMenu>
    <MudText Typo="Typo.h6" Class="px-4 py-2">Navigation</MudText>
    <MudDivider Class="my-2" />
    
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">
        Home
    </MudNavLink>
    
    <MudNavLink Href="games" Icon="@Icons.Material.Filled.SportsFootball">
        Games
    </MudNavLink>
    
    <MudNavLink Href="picks" Icon="@Icons.Material.Filled.CheckBox">
        Picks
    </MudNavLink>
</MudNavMenu>

<style>
    .nav-link {
        padding: 0.75rem 1rem;
        color: #d7d7d7;
        font-weight: 500;
        font-size: 1rem;
        text-decoration: none;
        display: block;
    }

    .nav-link:hover {
        color: white;
        background-color: rgba(255,255,255,0.1);
    }

    .nav-link.active {
        color: white;
        background-color: rgba(255,255,255,0.15);
    }

    .bi {
        font-size: 1.1rem;
        line-height: 1;
        display: inline-flex;
        align-items: center;
    }
</style>

